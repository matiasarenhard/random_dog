<div class="max-h-30 max-w-30">
  <div class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
    <div class="p-4">
      <h3 class="text-lg font-semibold text-slate-800">Random Dog</h3>
    </div>

    <div class="p-4">
      <%= button_to "Next random dog",
          random_dog_path,
          method: :get,
          class: "w-30 rounded-xl bg-indigo-600 px-4 py-2.5 text-white font-medium hover:bg-indigo-700 active:bg-indigo-800 transition-colors" %>
    </div>

    <div class="relative">
      <% if @dog_url.present? %>
        <%= image_tag @dog_url,
          alt: "Random Dog",
          class: "max-h-96 max-w-sm w-auto h-auto object-cover rounded-xl shadow-lg transition-transform duration-300 hover:scale-[1.03]" %>
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
      <% else %>
        <div class="flex items-center justify-center h-48 text-slate-500 text-lg font-medium">
          Sorry, we couldn't fetch a dog image. Please try again!
        </div>
      <% end %>
    </div>
  </div>
</div>